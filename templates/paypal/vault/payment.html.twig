{% extends 'paypal/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('pp-vault') }}
{% endblock %}
{% block content %}
    <div class="col text-center pb-4 paypal-font">
        <h4>{% block payments_base_title %}Let's try and pay something{% endblock payments_base_title %}</h4>
        <p>
            On the left side, create your dream product, then update the payment buttons
        </p>
    </div>
    <div class="row">
        <div class="col text-center">
            <div class="mb-1" id="paypal-button-container"></div>
            <div class="mt-5 font-weight-bold">
                {% block payments_base_more_info %}
                    <p>Check the <a target="_blank" href="https://developer.paypal.com/limited-release/vault-payment-methods/vault-sdk#link-vaultwiththejavascriptsdk"> Vaulting with JS SDK</a> documentation</p>
                {% endblock payments_base_more_info %}
            </div>
            <div class="text-left" id="result-col"></div>
            {% block payments_json_editors %}
                <div class="mt-3" id="paypal-buttons-editor" style="height: 200px;"></div>
                <div class="mt-3" id="create-order-editor" style="height: 800px;"></div>
            {% endblock %}
        </div>
    </div>
    <div id="customer-settings" data-settings="{{ app.session.get('settings') | json_encode }}"></div>
    <div id="capture-url" data-capture-url="{{ path("paypal-payments-capture", {'paymentId': 'payment_id_status'}) }}"></div>
{% endblock content %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://www.paypal.com/sdk/js?client-id={{ app.session.get('PAYPAL_SDK_CLIENT_ID') ?? PAYPAL_SDK_CLIENT_ID }}&currency={{app.session.get('settings')['settings-customer-currency']}}&locale={{app.session.get('settings')['settings-customer-locale']}}&components=buttons,funding-eligibility&disable-funding=card&vault=true&commit=true&intent=capture" data-client-token="{{ dataClientToken }}"></script>
    {{ encore_entry_script_tags('pp-vault') }}
{% endblock %}
