{% extends 'base.html.twig' %}
{% block title %}PayPal PlayGround{% endblock %}
{% block navbar %}
    {% embed "navbar/navbar.html.twig" %}
        {% block nav_class %}navbar-light bg-paypal paypal-font{% endblock nav_class %}
        {% block nav_items %}
            <div class="navbar-nav col justify-content-center">
                <a class="nav-link text-light" href="{{ path('paypal-index') }}">All Features</a>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Quick Access
                    </a>
                    <div class="dropdown-menu bg-paypal mw-100" aria-labelledby="navbarDropdown">
                        <a class="nav-link text-light" href="{{ path('paypal-payments-pay-ins') }}">Wallet Payments</a>
                        <div class="dropdown-divider"></div>
                        <a class="nav-link text-light" href="{{ path('paypal-payments-ppcp') }}">ACDC</a>
                        <div class="dropdown-divider"></div>
                        <a class="nav-link text-light" href="{{ path('paypal-payments-ecs') }}">Express Checkout Shortcut</a>
                        <div class="dropdown-divider"></div>
                        <a class="nav-link text-light" href="{{ path('paypal-vault-payment') }}">Vault Wallet</a>
                    </div>
                </li>
                {% include "paypal/modals/sandbox-credentials.html.twig" %}
            </div>
            <span class="m-3 badge badge-pill badge-success">{{ random([
                    'Yeah!', 'C\'mon!', 'Booom!', 'Awesome!', 'Massive!','Bombastic!','Payouts Rocks',
                    'PayPal Powah!', 'love PayPal you say?', 'What about some PayPal Magic?', 'The limit is the Sky'
                ]) }}</span>
        {% endblock nav_items %}
    {% endembed %}
{% endblock navbar %}
{% block body %}
    <div class="container mt-4">
        {% block content %}{% endblock content %}
    </div>
{% endblock body %}
