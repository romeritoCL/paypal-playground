{% extends 'hyperwallet/base.html.twig' %}
{% block content %}
    <div class="hyperwallet-font">
        <section class="jumbotron hyperwallet-font-header">
            <div class="container container-fluid">
                <div class="row justify-content-center">
                    <button class="btn d-inline align-middle">
                        <img class="logo-hyperwallet"
                             src="{{ asset('build/images/hyperwallet_logo.svg') }}"/>
                    </button>
                    <div class="jumbotron-heading d-inline align-middle">
                        <h1 class="ml-3 align-middle">Let's Play</h1>
                    </div>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="col">
                <ul class="list">
                    <li>API Enpoints testing</li>
                    <li>Checkout the multiple integrations methods</li>
                    <li>Understand the basics of HW payouts</li>
                </ul>
            </div>
        </div>
        <div class="row pt-1">
            <div class="col-lg-4">
                <a class="btn btn-block btn-outline-light bg-hyperwallet" href="{{ path('hyperwallet-users-index') }}">Users
                    API</a>
            </div>
            <div class="col-lg-8">
                <p class="pl-3">Users is a critical resource for HW. Play with them to see how they work.</p>
            </div>
        </div>
        <div class="row pt-1">
            <div class="col-lg-4">
                <a class="btn btn-block btn-outline-light bg-hyperwallet"
                   href="{{ path('hyperwallet-payments-index') }}">Payments API</a>
            </div>
            <div class="col-lg-8">
                <p class="pl-3">Check and make payments to your payees.</p>
            </div>
        </div>
        <div class="row pt-1">
            <div class="col-lg-4">
                <a class="btn btn-block btn-outline-light bg-hyperwallet"
                   href="{{ path('hyperwallet-transfers-index') }}">Transfers API</a>
            </div>
            <div class="col-lg-8">
                <p class="pl-3">See the transfers that users have initiated.</p>
            </div>
        </div>
    </div>
{% endblock %}
